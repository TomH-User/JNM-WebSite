{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" href="{{asset('assets/css/_new_partenaire.css')}}">{% endblock %}
{% block title %}Gestion Users{% endblock %}

{% block body %}

        <section class="banner pt-5">
        <div class="container">
            <div class="row justify-content-center">
                {% for message in app.flashes('success') %}    
                    <div class="alert alert-success p-4 mt-4">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="col-6">
                    <h1 class="col-6">Mon Profil actuel</h1>
                    <p>Nom       : {{app.user.nom}}   </p>
                    <p>Prenom    : {{app.user.prenom}}</p>
                    <p>Miage     : {{app.user.miage}}</p>
                    <p>Region    : {{app.user.region}}</p>
                    {# <p>RefStatut : {{app.user.RefStatut}}</p> #}
                    <p>Logement  : {{app.user.etatLogement}}</p>
                    <p>Transport : {{app.user.EtatTransport}}</p>
                    {# {{ form(userForm)}} #}
                <br>
                <p><a href="\edit_user"><button type="button" class="btn btn-primary">Modifier mon profil</button></a></p>
                <p><a href="\edit_pass"><button type="button" class="btn btn-primary">Modifier mon Mot de passe</button></a></p>
                </div>
            </div>
        </div>
    </section>

{% endblock %}