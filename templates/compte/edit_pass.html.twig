{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" href="{{asset('assets/css/_edit_pass.css')}}">{% endblock %}
{% block title %}Gestion Users{% endblock %}

{% block body %}

        <section class="banner pt-5">
        <div class="container">
            {% for message in app.flashes('error') %}    
                <div class="alert alert-warning p-4 mt-4">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="row justify-content-center">
                <div class="col-5">
                    <h1>Modification de mon mot de passe</h1>
                    <form method="post">
                        <div class="mb-3">
                            <label for="pass">Nouveau mot de passe</label>
                            <input type"password" id="pass" name="pass" class="form-control" placeholder="*********">
                        </div>
                        <div class="mb-3">
                                <label for="pass2">Confirmer votre de mot passe</label>
                            <input type"password" id="pass2" name="pass2" class="form-control" placeholder="*********">
                        </div>
                        <button class="btn btn-primary">Valider</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}