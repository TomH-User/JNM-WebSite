                            <li><a href="/register">
                                Inscription</a>
                            </li>
                            <li><a href="/login">
                                Connexion</a>
                            </li>
                            <li><a href="/logout">
                                Deconnexion</a>
                            </li>
                        </ul>
                    </li>

                    <li>
